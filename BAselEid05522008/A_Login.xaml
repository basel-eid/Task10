<Page x:Class="BAselEid05522008.A_Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BAselEid05522008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="A_Login">

    <Grid Background="White">
        <TextBox x:Name="Name_Txt" HorizontalAlignment="Left" Margin="175,149,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="142" Height="40" TextChanged="Name_Txt_TextChanged"/>
        <TextBox x:Name="ID_Txt" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top" Width="142" Height="40" TextChanged="Name_Txt_TextChanged" Margin="175,240,0,0"/>
        <PasswordBox x:Name="Pass_Txt" HorizontalAlignment="Left" Margin="175,68,0,0"  VerticalAlignment="Top" Width="142" Height="40"/>
        <Label Content="ID" Style="{StaticResource label2}" Margin="40,68,711,342" />
        <Label Content="Name" Style="{StaticResource label2}" Margin="40,149,674,261" />
        <Label Content="Password" Style="{StaticResource label2}" Margin="40,232,649,178" />
        <Button x:Name="L_butt" Content="Login" FontSize="25" Style="{StaticResource button2}" Margin="368,291,266,91" Click="L_butt_Click"/>
    </Grid>
</Page>
